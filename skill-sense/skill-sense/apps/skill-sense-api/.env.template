# Environment variables for local development
# Copy this file to .env and fill in your actual values

# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=us-central1
GCS_BUCKET_NAME=your-bucket-name

# Weaviate Configuration
WEAVIATE_SCHEME=https
WEAVIATE_HOST=your-cluster.weaviate.network
WEAVIATE_API_KEY=your-weaviate-api-key

# GitHub Integration (Optional - requires GitHub App or OAuth App)
# For GitHub Apps: https://github.com/settings/apps
# For OAuth Apps: https://github.com/settings/developers
GITHUB_TOKEN=

# LinkedIn Integration (OAuth 2.0)
# Register app at: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: Firebase Admin (if using server-side Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
